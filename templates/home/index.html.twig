{% block body %}
<style>
    .logohem{
        width: 150px;
    }
    body {
        background: #141414;
    }
    
    .watching {
        display: block;
        color: #fff;
        font-size: 80px;
        font-weight: unset;
        width: 100%;
        margin-top: 190px;
        text-align: center;

    }
    .profil-selection {
        display: flex;
        margin: 5px 30%; 
    }
    .profil {
        display: block;
        text-align: center;
        margin: 50px;
    }
    .profil-pic {
        margin-top: 20px;
        margin-bottom: 10px;
    }
    .profil-pic:hover {
        border: 5px solid white;
    }
    .profil-name {
        color: #AEAEAE;
        font-size: 20px;
        font-family: Helvetica Neue,Segoe UI,Roboto,Ubuntu,sans-serif;
    }
    .profil-name:hover {
        color: white;
    }
    a {
        text-decoration: none;
        color: #AEAEAE;
    }
    a:hover {
        color: white;
    }
    img {
        width: 156px;
    }

    

</style>

<div class="example-wrapper">
    <div class="watching">Who's watching ?</div>

    <div class="profil-selection">
        <div class="profil">
            <a href="{{path ("app_pro_page")}}"><div class="profil-pic">
                <img src="https://i65.servimg.com/u/f65/17/33/44/96/18406110.jpg">
            </div>
            <div class="profil-name">
                Professional
            </div></a>
        </div>
        <div class="profil">
            <a href="{{path ("app_private_page")}}"><div class="profil-pic">
                <img src="https://i65.servimg.com/u/f65/17/33/44/96/18406110.jpg">
            </div>
            <div class="profil-name">
                Private
            </div></a>
        </div>
        {% set user = {"name":"Hemnyos", "role":"admin", "isConnected":"false"} %}
        {% if user.isConnected == "true" %}
        <div class="profil">
           <a href="{{path ("app_connexion_page")}}"><div class="profil-pic">
                <img src="https://i65.servimg.com/u/f65/17/33/44/96/18406110.jpg">
            </div>
            <div class="profil-name">
                Connexion
            </div></a> 
        </div>
        {% else %}
        <div class="profil">
           <a href="{{path ("app_inscription_page")}}"><div class="profil-pic">
                <img src="https://i65.servimg.com/u/f65/17/33/44/96/18406110.jpg">
            </div>
            <div class="profil-name">
                Inscription
            </div></a> 
        </div>
        {% endif %}
    </div>

</div>
{% endblock %}
